@model Honden

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.PicURL" />
        <div class="caption">
            <h3 class="pull-right">@Model.Prijs.ToString("c")</h3>
            <h3>
                <a>@Model.Naam</a>
            </h3>
            <p>@Model.RasId</p>
        </div>
        <div class="addToCart text-right">
            <p class="button ">
                <a class="btn btn-success" id="cartButton" asp-controller="WinkelWagen" asp-action="AddToWinkelWagen" asp-route-hondId="@Model.HondId">
                    Add to cart
                </a>
            </p>
        </div>

    </div>
    <h4>Honden naam: @Model.Naam</h4>
    <h4>Prijs van hond: @Model.Prijs.ToString("c")</h4>
</div>